generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Season {
  all
  summer
  winter
  spring
  autumn
}

model ClothingItem {
  id              String   @id @default(uuid())
  userId          String
  type            String
  brand           String?
  color           String
  secondaryColor  String?
  style           String
  imageUrl        String
  season          Season
  createdAt       DateTime @default(now())
}

model Preference {
  id              String   @id @default(uuid())
  userId          String   @unique
  favoriteColors  String[]
  avoidColors     String[]
  favoriteStyles  String[]
  avoidTypes      String[]
  createdAt       DateTime @default(now())
}

model Outfit {
  id          String   @id @default(uuid())
  userId      String
  clothingIds String[]
  name        String?
  createdAt   DateTime @default(now())
}

